<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wine_blend_solver"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.slider_graph_demo.WineBlendSolverActivity"
    android:orientation="vertical">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3">
        <TableRow>
            <TextView
                android:text=""/>
            <TextView
                android:text="Fruity"/>
            <TextView
                android:text="Nutty" />
            <TextView
                android:text="Earthy"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Wine 1"/>
            <EditText
                android:id="@+id/edit_text_w1_fruity"
                android:text="10"/>
            <EditText
                android:id="@+id/edit_text_w1_nutty"
                android:text="20"/>
            <EditText
                android:id="@+id/edit_text_w1_earthy"
                android:text="40"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Wine 2"/>
            <EditText
                android:id="@+id/edit_text_w2_fruity"
                android:text="60"/>
            <EditText
                android:id="@+id/edit_text_w2_nutty"
                android:text="10"/>
            <EditText
                android:id="@+id/edit_text_w2_earthy"
                android:text="30"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Wine 3"/>
            <EditText
                android:id="@+id/edit_text_w3_fruity"
                android:text="20"/>
            <EditText
                android:id="@+id/edit_text_w3_nutty"
                android:text="20"/>
            <EditText
                android:id="@+id/edit_text_w3_earthy"
                android:text="70"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="48dp"
        android:stretchColumns="0,1,2,3">
        <TableRow>
            <TextView
                android:text=""/>
            <TextView
                android:text="Fruity"/>
            <TextView
                android:text="Nutty"/>
            <TextView
                android:text="Earthy"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Blend"/>
            <EditText
                android:text=""
                android:id="@+id/tv_target_fruity"/>
            <EditText
                android:text=""
                android:id="@+id/tv_target_nutty"/>
            <EditText
                android:text=""
                android:id="@+id/tv_target_earthy"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="48dp"
        android:stretchColumns="0,1,2,3">
        <TableRow>
            <TextView
                android:text=""/>
            <TextView
                android:text="Wine 1 amt"/>
            <TextView
                android:text="Wine 2 amt"/>
            <TextView
                android:text="Wine 3 amt"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Blend"/>
            <TextView
                android:text=""
                android:id="@+id/tv_w1_amt"/>
            <TextView
                android:text=""
                android:id="@+id/tv_w2_amt"/>
            <TextView
                android:text=""
                android:id="@+id/tv_w3_amt"/>
        </TableRow>
    </TableLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_calculate"
        android:text="Calculate"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
</LinearLayout>
